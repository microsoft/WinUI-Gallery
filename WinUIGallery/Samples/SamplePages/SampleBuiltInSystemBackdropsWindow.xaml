<Window
    x:Class="WinUIGallery.SamplePages.SampleBuiltInSystemBackdropsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SystemBackdrop sample window"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            x:Name="titleBar"
            Grid.Column="1"
            Margin="8,0,0,0"
            VerticalAlignment="Stretch"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                <Image
                    Width="18"
                    VerticalAlignment="Center"
                    Source="ms-appx:///Assets/Tiles/BadgeLogo.png" />
                <TextBlock
                    x:Name="AppTitle"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind Title}" />
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="20">
            <TextBlock x:Name="tbChangeStatus" HorizontalAlignment="Center" />
            <ComboBox
                x:Name="backdropComboBox"
                HorizontalAlignment="Stretch"
                Header="Current backdrop "
                SelectionChanged="BackdropComboBox_SelectionChanged">
                <ComboBoxItem Content="Mica" />
                <ComboBoxItem Content="MicaAlt" />
                <ComboBoxItem Content="Acrylic" />
                <ComboBoxItem Content="None" />
            </ComboBox>
            <ComboBox
                x:Name="themeComboBox"
                HorizontalAlignment="Stretch"
                Header="Window theme "
                SelectionChanged="ThemeComboBox_SelectionChanged">
                <ComboBoxItem Content="Use system setting" />
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
