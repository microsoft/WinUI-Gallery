<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUIGallery.ControlPages.SceneGraphPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WinUIGallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:layouts="using:WinUIGallery.Layouts"
    xmlns:local="using:WinUIGallery.ControlPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shaders="using:WinUIGallery.Shaders"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Spacing="64">
            <controls:ControlExample
                x:Name="Example1"
                CSharpSource="ContentDialog/ContentDialogSample1_cs.txt"
                HeaderText="A basic dialog that with a custom shader animation when closing."
                XamlSource="ContentDialog/ContentDialogSample1_xaml.txt">
                <controls:ControlExample.Example>
                    <Button
                        x:Name="ShowDialog"
                        Click="ShowDialog_Click"
                        Content="Show dialog"
                        Style="{StaticResource AccentButtonStyle}" />
                </controls:ControlExample.Example>
            </controls:ControlExample>
            <controls:ControlExample HeaderText="Custom effects with .">
                <controls:ControlExample.Example>
                    <Grid RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ComboBox
                                x:Name="EffectComboBox"
                                Header="Effect"
                                SelectedIndex="0">
                                <x:String>Ripple</x:String>
                                <x:String>Swipe</x:String>
                            </ComboBox>
                            <Button
                                VerticalAlignment="Bottom"
                                Click="PlayEffect_Click"
                                Content="Play effect" />
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid x:Name="rootFrameParent">
                                <Grid
                                    x:Name="rootFrame"
                                    Width="360"
                                    Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource OverlayCornerRadius}">
                                    <Image Source="/Assets/SampleMedia/rainier.jpg" />
                                    <Button
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="This is a XAML control" />
                                </Grid>
                            </Grid>
                            <Grid x:Name="rootFrameInFront" />
                        </Grid>
                    </Grid>
                </controls:ControlExample.Example>
            </controls:ControlExample>
        </StackPanel>
        <shaders:OverlayPanel x:Name="overlayPanel" />
    </Grid>
</Page>
