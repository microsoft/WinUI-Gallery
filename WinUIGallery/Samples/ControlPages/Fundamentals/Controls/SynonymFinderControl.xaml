<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinUIGallery.Samples.ControlPages.Fundamentals.Controls.SynonymFinderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIGallery.Samples.ControlPages.Fundamentals.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="8">
            <TextBlock Text="{x:Bind Header, Mode=OneWay}"
                       FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal"
                        Spacing="5">
                <TextBox x:Name="InputTextBox"
                         Width="200"
                         PlaceholderText="Enter a word..."
                         KeyDown="InputTextBox_KeyDown" />
                <Button x:Name="FindButton"
                        Click="FindButton_Click">
                    <FontIcon Glyph="&#xE721;" />
                </Button>
            </StackPanel>
            <ListView x:Name="SynonymsList" />
        </StackPanel>
    </Grid>
</UserControl>
